{
  "SystemConfiguration": {
    "LoggingConfiguration": {
      "Destinations": [
        "File",
        "EventLog",
        "SIEM"
      ],
      "Format": "JSON",
      "Rotation": {
        "Count": 10,
        "Size": "100MB",
        "Frequency": "Daily"
      },
      "Compression": true,
      "Level": "Info",
      "Structured": true,
      "Retention": {
        "Application": "90 days",
        "Performance": "30 days",
        "Audit": "7 years",
        "Security": "1 year"
      }
    },
    "ResourceLimits": {
      "Memory": {
        "Critical": "1.8GB",
        "Warning": "1.5GB",
        "Max": "2GB"
      },
      "Network": {
        "ConnectionPool": 500,
        "MaxBandwidth": "100Mbps",
        "TimeoutSeconds": 30
      },
      "Disk": {
        "Critical": "9GB",
        "Warning": "8GB",
        "Max": "10GB"
      },
      "CPU": {
        "Critical": "90%",
        "Warning": "70%",
        "Max": "80%"
      }
    },
    "ModuleConfiguration": {
      "Unity-Claude-SystemCoordinator": {
        "TimeoutSeconds": 300,
        "LogLevel": "Info",
        "Enabled": true,
        "Priority": "Critical",
        "FailoverEnabled": true,
        "MaxConcurrency": 100,
        "BackupCoordinatorEnabled": true,
        "HealthCheckInterval": 30
      },
      "Unity-Claude-ScalabilityOptimizer": {
        "Enabled": true,
        "ScalingCooldown": 300,
        "MaxInstances": 10,
        "Priority": "High",
        "ScalingThreshold": {
          "Memory": 80,
          "Throughput": 1000,
          "Latency": 500,
          "CPU": 75
        },
        "AutoScalingEnabled": true,
        "MinInstances": 2
      },
      "Unity-Claude-MachineLearning": {
        "PredictionCacheEnabled": true,
        "MaxModelSize": "500MB",
        "ContinuousLearning": true,
        "Enabled": true,
        "Priority": "High",
        "LearningRate": 0.1,
        "ModelAccuracyThreshold": 0.85,
        "ModelBackupFrequency": "Daily"
      },
      "Unity-Claude-ReliabilityManager": {
        "DisasterRecoveryEnabled": true,
        "AutoRecoveryEnabled": true,
        "Enabled": true,
        "UptimeTarget": 99.9,
        "HealthMonitoringInterval": 60,
        "FaultToleranceLevel": "High",
        "Priority": "Critical",
        "BackupRetention": 30
      }
    },
    "SecurityConfiguration": {
      "Authorization": {
        "MinimumPrivilege": true,
        "RoleBasedAccess": true,
        "AuditingEnabled": true,
        "AccessReviewInterval": "Monthly"
      },
      "Authentication": {
        "Method": "IntegratedWindows",
        "SessionTimeout": 28800,
        "Required": true,
        "LockoutDuration": 1800,
        "MaxFailedAttempts": 3
      },
      "Encryption": {
        "DataAtRest": true,
        "KeyRotation": "Quarterly",
        "Algorithm": "AES-256",
        "DataInTransit": true
      },
      "Compliance": {
        "GDPR": true,
        "SOX": true,
        "DataRetention": "7 years",
        "HIPAA": false,
        "AuditLogging": true
      }
    }
  },
  "DeploymentConfiguration": {
    "RollbackStrategy": "Automatic",
    "Stages": [
      {
        "RollbackOnFailure": false,
        "Name": "Pre-deployment",
        "Actions": [
          "Backup",
          "HealthCheck",
          "ValidationTests"
        ],
        "Timeout": 1800
      },
      {
        "RollbackOnFailure": true,
        "Name": "Deployment",
        "Actions": [
          "Stop",
          "Deploy",
          "Configure",
          "Start"
        ],
        "Timeout": 3600
      },
      {
        "RollbackOnFailure": true,
        "Name": "Post-deployment",
        "Actions": [
          "HealthCheck",
          "SmokeTests",
          "PerformanceValidation"
        ],
        "Timeout": 1800
      },
      {
        "RollbackOnFailure": true,
        "Name": "Production-validation",
        "Actions": [
          "LoadTesting",
          "MonitoringValidation",
          "AlertingTests"
        ],
        "Timeout": 2700
      }
    ],
    "Strategy": "BlueGreen",
    "HealthChecks": {
      "FailureThreshold": 2,
      "Interval": 30,
      "Enabled": true,
      "SuccessThreshold": 3,
      "Timeout": 60
    }
  },
  "Environment": {
    "SecurityLevel": "High",
    "Tier": "Enterprise",
    "ComplianceRequired": true,
    "Name": "Production",
    "Type": "Production"
  }
}
